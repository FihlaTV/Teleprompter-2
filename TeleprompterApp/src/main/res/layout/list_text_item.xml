<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_layout_margin"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    app:cardElevation="@dimen/card_elevation"
    android:orientation="vertical"
    android:foreground="?selectableItemBackground">

        <TextView
            android:id="@+id/text_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="12sp"
            android:paddingBottom="@dimen/text_title_bottom_margin"
            android:paddingLeft="@dimen/text_side_margin"
            android:paddingRight="@dimen/text_side_margin"
            android:paddingTop="@dimen/text_title_top_margin"
            android:textColor="@color/colorPrimaryText" />

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/text_align_justify_icon"/>

</LinearLayout>