<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#0099cc"
android:layout_margin="0dp"
android:id="@+id/slide_show_bg">

<!-- The primary full-screen view. This can be replaced with whatever view
     is needed to present your content, e.g. VideoView, SurfaceView,
     TextureView, etc. -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ui_control_container">

    <com.and.ibrahim.teleprompter.modules.CustomView.SlideShowScrollView
        android:id="@+id/slide_show_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/scroll_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            tools:text="@string/mytest"
            tools:textColor="#33b5e5"
            tools:textSize="32sp"
            android:layout_margin="@dimen/text_side_margin"
            tools:textStyle="bold" />

    </com.and.ibrahim.teleprompter.modules.CustomView.SlideShowScrollView>
</LinearLayout>

<!-- This FrameLayout insets its children based on systemm windows using
     android:fitsSystemWindows. -->


<FrameLayout
    android:id="@+id/countdown_view"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:background="@color/color_graydr"
    style="?metaButtonBarButtonStyle"
    android:visibility="invisible"
    >
    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="48sp"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:text="countdown_start"/>

</FrameLayout>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="@color/color_graydr"
        app:titleTextColor="@color/color_white"
        style="?metaButtonBarButtonStyle"
        app:navigationIcon="@drawable/ic_arrow"

        >

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/color_graydr"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/slide_show_play"
            style="?metaButtonBarButtonStyle"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="slide_show_play_btn_label" />
        <Button
            android:id="@+id/slide_show_pause"
            style="?metaButtonBarButtonStyle"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="slide_show_pause_button"/>

    </LinearLayout>
</FrameLayout>

</FrameLayout>