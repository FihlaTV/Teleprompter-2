<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/colors_item_width"
    android:layout_height="@dimen/colors_item_height"
    android:layout_margin="@dimen/colors_item_margin"
    android:background="@drawable/green_transparent_back"
    android:padding="@dimen/colors_item_padding">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_background_color"
        android:layout_width="@dimen/colors_item_image_width"
        android:layout_height="@dimen/colors_item_image_height"
        android:scaleType="fitCenter"
        app:riv_border_color="@color/orange_light"
        app:riv_border_width="1dip"
        app:riv_corner_radius="30dip"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:riv_tile_mode="repeat" />


    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_text_color"
        android:layout_width="@dimen/colors_item_image_width"
        android:layout_height="@dimen/colors_item_image_height"
        android:layout_toEndOf="@+id/img_background_color"
        android:layout_toRightOf="@+id/img_background_color"
        android:scaleType="fitCenter"
        app:riv_border_color="@color/orange_light"
        app:riv_border_width="1dip"
        app:riv_corner_radius="30dip"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:riv_tile_mode="repeat" />
</RelativeLayout>