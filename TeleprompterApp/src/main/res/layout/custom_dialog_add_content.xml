<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_title"
        android:src="@drawable/ic_fullscreen"
        android:inputType="textCapSentences" />

    <com.and.ibrahim.teleprompter.util.LinedEditText
        android:id="@+id/linededit_text_content"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/edit_title"
        android:layout_margin="10dp"
        android:hint="@string/add_your_text"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/txt_add"
        android:layout_width="100dp"
        android:layout_below="@+id/linededit_text_content"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white"
        android:clickable="true"
        android:text="@string/add_dialog"
        android:textColor="@color/color_graydr"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/txt_cancel"
        android:layout_width="100dp"
        android:layout_toStartOf="@+id/txt_add"
        android:layout_below="@+id/linededit_text_content"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:text="@string/cancel_dialog"
        android:textColor="@color/color_graydr"
        android:textStyle="bold"
        android:focusable="true"
        android:layout_toLeftOf="@+id/txt_add" />

</RelativeLayout>