<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginRight="@dimen/item_side_margin"
    android:layout_marginLeft="@dimen/item_side_margin"
    android:layout_marginTop="@dimen/item_bottom_margin"
    android:layout_marginBottom="@dimen/item_top_margin"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:orientation="vertical"
    app:cardElevation="@dimen/card_elevation"
    android:foreground="?selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/color_white"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/note"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="klklklkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
                android:textColor="@color/lime_green" />

            <ImageView
                android:id="@+id/note"
                android:layout_width="48dp"
                android:layout_alignParentLeft="true"
                android:layout_height="48dp"
                android:src="@drawable/note_2_256"
                android:contentDescription="@string/app_name" />


        </RelativeLayout>

    </FrameLayout>
</android.support.v7.widget.CardView>