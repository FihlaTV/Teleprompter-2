<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/app_par_elevation"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="@dimen/toolbar_text_start_margin"
            app:expandedTitleMarginEnd="@dimen/toolbar_text_end_margin"
            android:fitsSystemWindows="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:layout_gravity="end|center"
                android:layout_marginLeft="@dimen/toolbar_text_side_margin"
                android:layout_marginStart="@dimen/toolbar_text_side_margin"
                android:textSize="@dimen/toolbar_text_size"
                android:contentDescription="@string/app_name"
                android:text="@string/app_name" />


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="@dimen/toolbar_elevation"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="@dimen/list_width"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/list_bottom_padding"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/list_side_padding"
        android:paddingRight="@dimen/list_side_padding"
        android:paddingTop="@dimen/list_margin_top"
        android:scrollbarStyle="outsideOverlay" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="230dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="@dimen/fab_margin"
        android:visibility="invisible"
        app:backgroundTint="@color/sea_green"
        app:elevation="@dimen/fab_elevation"
        app:pressedTranslationZ="@dimen/fab_press_translation_z"
        android:src="@drawable/ic_add_white"
        android:layout_marginEnd="@dimen/fab_margin" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:layout_gravity="bottom|end"
        android:visibility="invisible"
        app:backgroundTint="@color/lime_green"
        app:elevation="@dimen/fab_elevation"
        app:pressedTranslationZ="@dimen/fab_press_translation_z"
        android:src="@drawable/ic_sd_storage"
        android:layout_marginEnd="@dimen/fab_margin" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="@dimen/fab_margin"
        android:visibility="invisible"
        app:elevation="@dimen/fab_elevation"
        app:backgroundTint="@color/color_fab_cloud"
        app:pressedTranslationZ="@dimen/fab_press_translation_z"
        android:src="@drawable/ic_cloud_download"
        android:layout_marginEnd="@dimen/fab_margin" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:elevation="@dimen/fab_elevation"
        app:backgroundTint="@color/colorAccent"
        app:pressedTranslationZ="@dimen/fab_press_translation_z"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_white" />

</android.support.design.widget.CoordinatorLayout>
